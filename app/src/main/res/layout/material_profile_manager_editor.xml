<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/c"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_green">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="14dp"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentRight="true"
            android:padding="14dp"
            android:scaleType="centerInside"
            android:src="@drawable/save" />

        <TextView
            android:id="@+id/a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/save"
            android:layout_margin="8dp"
            android:ellipsize="end"
            android:fontFamily="sans"
            android:maxLines="1"
            android:padding="6dp"
            android:text="Profile Name :"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/profile_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a"
            android:layout_margin="8dp"
            android:background="@color/material_green_light"
            android:ellipsize="end"
            android:fontFamily="sans"
            android:hint="Enter name here"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="@color/white_alpha"
            android:textSize="20sp" />



    </RelativeLayout>

    <View

        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/c"
        android:background="@drawable/bottom_shadow" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/c">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/copy_from"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_button_selector"
                android:padding="16dp"
                android:text="Copy from"
                android:textColor="@color/material_blue"
                android:textSize="18sp" />

            <include
                android:id="@+id/triggers"
                layout="@layout/scroll_view_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/restriction"
                layout="@layout/scroll_view_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/prohibitions"
                layout="@layout/scroll_view_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/commands"
                layout="@layout/scroll_view_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>