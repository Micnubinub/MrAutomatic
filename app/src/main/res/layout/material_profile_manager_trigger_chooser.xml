<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_card_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/a"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/a"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="4dp"
            android:text="Wifi"
            android:textColor="@color/dark_grey_text"
            android:textSize="18sp"
            android:textStyle="bold" />


        <View
            android:id="@+id/wifi_click_view"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:background="@drawable/profile_view_list_selector"
            android:minHeight="84dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/b"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/b"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="4dp"
            android:text="Bluetooth"
            android:textColor="@color/dark_grey_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/bluetooth_click_view"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:background="@drawable/profile_view_list_selector"
            android:minHeight="84dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/c"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/c"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="4dp"
            android:text="Battery"
            android:textColor="@color/dark_grey_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/battery_click_view"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:background="@drawable/profile_view_list_selector"
            android:minHeight="84dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/h"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/h"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="4dp"
            android:text="Time"
            android:textColor="@color/dark_grey_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/time_click_view"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:background="@drawable/profile_view_list_selector"
            android:minHeight="84dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/d"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/d"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="4dp"
            android:text="GPS"
            android:textColor="@color/dark_grey_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/gps_click_view"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:background="@drawable/profile_view_list_selector"
            android:minHeight="84dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/e"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/e"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="4dp"
            android:text="NFC"
            android:textColor="@color/dark_grey_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/nfc_click_view"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:background="@drawable/profile_view_list_selector"
            android:minHeight="84dp" />
    </RelativeLayout>


</LinearLayout>