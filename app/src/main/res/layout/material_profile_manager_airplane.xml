<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_card_background"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/a"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/bluetooth_switch"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8dp"
            android:text="Airplane mode"
            android:textColor="@color/dark_grey_text"
            android:textSize="22sp"
            android:textStyle="bold" />

        <view_classes.MaterialSwitch
            android:id="@+id/airplane_mode_switch"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="8dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a"
        android:ellipsize="end"
        android:padding="8dp"
        android:text="If Airplane mode is on you won't be able to receive calls and texts until it is turned off"
        android:textColor="@color/material_red_dark"
        android:textSize="18sp"
        android:textStyle="italic" />

</RelativeLayout>